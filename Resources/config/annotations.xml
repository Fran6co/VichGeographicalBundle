<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="vich_geographical.annotation.parser.class">Doctrine\Common\Annotations\Parser</parameter>
        <parameter key="vich_geographical.annotation.reader.class">Vich\GeographicalBundle\Annotation\AnnotationReader</parameter>
    </parameters>

    <services>
        
        <service id="vich_geographical.annotation.parser" class="%vich_geographical.annotation.parser.class%">
            <call method="setAutoloadAnnotations">
                <argument>true</argument>
            </call>
            <call method="setAnnotationNamespaceAlias">
                <argument>Vich\GeographicalBundle\Annotation\</argument>
                <argument>vich</argument>
            </call>
        </service>
        
        <service id="vich_geographical.annotation.reader" class="%vich_geographical.annotation.reader.class%">
            <argument type="service" id="vich_geographical.annotation.cache" strict="false" />
            <argument type="service" id="vich_geographical.annotation.parser" />
            <call method="setDefaultAnnotationNamespace">
                <argument>Vich\GeographicalBundle\Annotation\</argument>
            </call>
        </service>
        
        <service id="vich_geographical.annotation.cache" class="Doctrine\Common\Cache\ArrayCache" />
        
    </services>

</container>
